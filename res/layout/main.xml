<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:flatui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main" >

    <fragment
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="com.google.android.gms.maps.SupportMapFragment" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:text="TextView"
        android:visibility="invisible" />

    <com.akexorcist.roundcornerprogressbar.IconRoundCornerProgressBar
        android:id="@+id/iconRoundCornerProgressBar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/iconRoundCornerProgressBar1"
        app:backgroundRadius="0dp"
        app:backgroundPadding="2dp"
        app:iconPadding="1dp"
        app:iconSize="15dp"
        app:iconSrc="@drawable/power" />

    <Button
        android:id="@+id/button1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/iconRoundCornerProgressBar2"
        android:text="Refresh" />

    <com.akexorcist.roundcornerprogressbar.IconRoundCornerProgressBar
        android:id="@+id/iconRoundCornerProgressBar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        app:backgroundPadding="2dp"
        app:backgroundRadius="0dp"
        app:iconPadding="1dp"
        app:iconSize="15dp"
        app:iconSrc="@drawable/heart36" >

    </com.akexorcist.roundcornerprogressbar.IconRoundCornerProgressBar>

    <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
        android:id="@+id/roundCornerProgressBar1"
        android:layout_width="wrap_content"
        android:layout_height="4dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/iconRoundCornerProgressBar2"
        android:visibility="visible"
        app:backgroundPadding="0dp"
        app:backgroundRadius="0dp" >

    </com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/roundCornerProgressBar1"
        android:text="TextView"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" >

        <com.cengalabs.flatui.views.FlatButton
            android:id="@+id/flatButton1"
            android:layout_width="67dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.22"
            android:text="Collection"
            flatui:fl_theme="@array/sky" />

        <com.cengalabs.flatui.views.FlatButton
            android:id="@+id/flatButton2"
            android:layout_width="69dp"
            android:layout_height="wrap_content"
            android:text="Backpack"
            flatui:fl_theme="@array/orange" />

        <com.cengalabs.flatui.views.FlatButton
            android:id="@+id/flatButton3"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:text=" Me"
            flatui:fl_theme="@array/grass" />

        <com.cengalabs.flatui.views.FlatButton
            android:id="@+id/flatButton4"
            android:layout_width="63dp"
            android:layout_height="match_parent"
            android:layout_weight="0.43"
            android:text="Rank"
            flatui:fl_theme="@array/blossom" />

        <com.cengalabs.flatui.views.FlatButton
            android:id="@+id/flatButton5"
            android:layout_width="76dp"
            android:layout_height="match_parent"
            android:text="Store"
            flatui:fl_theme="@array/grape" />
    </LinearLayout>

    <com.cengalabs.flatui.views.FlatButton
        android:id="@+id/flatButton6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button1"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView2"
        android:text="In-Game" />

</RelativeLayout>